<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:use="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gz.home.activity.MemberActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/title_bar"/>
    <RelativeLayout
        android:id="@+id/btn_mem_avater"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_click"
        android:layout_marginTop="@dimen/half_button_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_margin"/>
        <com.gz.home.customerview.CircleImageView
            android:id="@+id/mem_avater"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/default_avatar"
            android:layout_marginRight="@dimen/message_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            use:round="3dp"/>
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        layout="@layout/separate"/>
    <RelativeLayout
        android:id="@+id/btn_mem_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/item_click">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_margin"/>
        <TextView
            android:id="@+id/mem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李天一"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/light_grey"
            android:layout_marginRight="@dimen/message_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        layout="@layout/separate"/>
    <RelativeLayout
        android:id="@+id/btn_mem_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/item_click">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_margin"/>
        <TextView
            android:id="@+id/mem_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13800001111"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/light_grey"
            android:layout_marginRight="@dimen/message_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        layout="@layout/separate"/>
    <RelativeLayout
        android:id="@+id/btn_mem_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_height"
        android:background="@drawable/item_click">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_margin"/>
        <TextView
            android:id="@+id/mem_address"
            android:layout_width="wrap_content"
            android:maxWidth="220dp"
            android:layout_height="wrap_content"
            android:text="地球村天朝妖都哈哈哈哈哈地球村天朝妖都哈哈哈哈哈地球村天朝妖都哈哈哈哈哈"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/light_grey"
            android:layout_marginRight="@dimen/message_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_mem_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/half_button_height"
        android:background="@drawable/item_click">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_margin"/>
        <TextView
            android:id="@+id/mem_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/light_grey"
            android:layout_marginRight="@dimen/message_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        layout="@layout/separate"/>
    <RelativeLayout
        android:id="@+id/btn_mem_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/item_click">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_margin"/>
        <TextView
            android:id="@+id/mem_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的地盘听我的"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/light_grey"
            android:layout_marginRight="@dimen/message_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height">
        <CheckBox
            android:id="@+id/check_father"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="父"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/check_father"
            android:layout_toEndOf="@+id/check_father"
            android:id="@+id/check_father_tv" />
        <CheckBox
            android:id="@+id/check_mother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="母"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/check_mother"
            android:layout_toEndOf="@+id/check_mother"
            android:id="@+id/check_mother_tv" />
        <CheckBox
            android:id="@+id/check_spouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="200dp"/>
        <TextView
            android:id="@+id/check_spouse_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配偶"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/check_spouse"
            android:layout_toEndOf="@+id/check_spouse"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/btn_selector_titlecolor_light"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:text="添加为亲友"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle"
        android:gravity="center"/>

</LinearLayout>